<h1>Category show page</h1>
<%= @category.name %>
<h2>products in this category</h2>
<ul>
  <% @products.each do |product| %>
  <li>
    <%= link_to product.title, product_path(product) %>
    <%= product.description %>
    <%= product.created_at %>
  </li>
  <% end %>
</ul>

<%= link_to "Back to categories page", categories_path %>

